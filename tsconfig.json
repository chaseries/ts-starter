{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["esNext"],
    "module": "esNext",
    "target": "esNext",
    "baseUrl": "./",
    "paths": {
      "@SRC": ["/src"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
